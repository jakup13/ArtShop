<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.artshop.MainActivity">

    <RelativeLayout
        android:id="@+id/relativelay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageCrayonsTop"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/art_shop_top_02_land" />

        <TextView
            android:id="@+id/ShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-3"
            android:shadowDy="3"
            android:shadowRadius="2"
            android:text="@string/shop_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/big_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageCrayonsTop"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:gravity="center"
            android:text="@string/slogan"
            android:textSize="@dimen/med_text1"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/info"
            android:layout_marginTop="22dp"
            android:contentDescription="@null"
            android:scaleType="fitEnd"
            android:src="@drawable/pencil_sharpener_60" />

        <TextView
            android:id="@+id/address"
            style="@style/icons_land"
            android:layout_alignStart="@+id/view"
            android:layout_below="@+id/slogan"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:layout_marginTop="@dimen/marg_top_land"
            android:autoLink="map"
            android:clickable="true"
            android:drawablePadding="@dimen/text_padding_land"
            android:drawableStart="@drawable/map_icon_2_32"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/address_land"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/address"
            android:layout_marginEnd="@dimen/big_text"
            android:layout_marginStart="@dimen/big_text"
            android:background="#75261a" />

        <TextView
            android:id="@+id/phone"
            style="@style/icons_land"
            android:layout_below="@id/address"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:layout_marginStart="@dimen/big_text"
            android:layout_marginTop="@dimen/marg_top_land"
            android:autoLink="phone"
            android:clickable="true"
            android:drawablePadding="@dimen/text_padding_land"
            android:drawableStart="@drawable/mobilephone_icon_2_32"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/phone"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/phone"
            android:layout_marginEnd="@dimen/big_text"
            android:layout_marginStart="@dimen/big_text"
            android:background="#1a6b51" />

        <TextView
            android:id="@+id/email"
            style="@style/icons_land"
            android:layout_below="@id/address"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:layout_marginStart="@dimen/med_text1"
            android:layout_marginTop="@dimen/marg_top_land"
            android:layout_toEndOf="@id/phone"
            android:autoLink="email"
            android:drawablePadding="@dimen/text_padding_land"
            android:drawableStart="@drawable/email_icon_2_32"
            android:gravity="center"
            android:text="@string/email_address"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email"
            android:layout_marginEnd="@dimen/big_text"
            android:layout_marginStart="@dimen/big_text"
            android:background="#9d2224" />

        <TextView
            android:id="@+id/website"
            style="@style/icons_land"
            android:layout_below="@id/address"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:layout_marginStart="@dimen/med_text1"
            android:layout_marginTop="@dimen/marg_top_land"
            android:layout_toEndOf="@id/email"
            android:drawablePadding="@dimen/text_padding_land"
            android:drawableStart="@drawable/web_icon_2_32"
            android:gravity="center"
            android:onClick="openWebsite"
            android:text="@string/website"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/website"
            android:layout_marginEnd="@dimen/big_text"
            android:layout_marginStart="@dimen/big_text"
            android:background="#d2b82d" />

        <TextView
            android:id="@+id/info"
            style="@style/icons_small_land"
            android:layout_below="@id/view4"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/marg_bot_land"
            android:layout_marginStart="@dimen/big_text"
            android:layout_marginTop="@dimen/marg_top_land"
            android:drawablePadding="@dimen/text_padding_land"
            android:drawableStart="@drawable/info_icon_2_32"
            android:gravity="start"
            android:text="@string/info" />

    </RelativeLayout>
</ScrollView>